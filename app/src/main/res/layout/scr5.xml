<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#fff">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/MM"
        android:layout_alignBottom="@+id/MM"
        android:layout_alignParentStart="true"
        android:fontFamily="casual"
        android:text="Subject â–¼"
        android:onClick="onClickSubject"
        android:textColor="#4285f4"
        android:textSize="20dp" />

    <Button
        android:id="@+id/MM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="end"
        android:background="#a6df9d"
        android:fontFamily="casual"
        android:onClick="onClickMM"
        android:text="Main Menu"
        android:textColor="#216303"
        android:textSize="20sp" />

</RelativeLayout>

    <View
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#948d8d" />


    <TextView
        android:id="@+id/subname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subject name"
        android:gravity="center_horizontal"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#948d8d" />


    <TextView
        android:id="@+id/percentage"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="65%"
        android:textSize="75dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#00ff9d"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total no. of lectures : "
            android:textColor="#000"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/totalLectures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100"
            android:layout_weight="3"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lectures attended : "
            android:textColor="#000"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/lecturesAttended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="65"
            android:layout_weight="3"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lectures missed : "
            android:textColor="#000"
            android:layout_weight="1"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/lecturesMissed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="35"
            android:layout_weight="3"
            android:textColor="#000"
            android:fontFamily="monospace"
            android:textSize="20sp"/>


    </LinearLayout>

</LinearLayout>
