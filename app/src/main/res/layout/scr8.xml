<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:textSize="20sp"
            android:textColor="#f53434"
            android:fontFamily="casual"
            android:layout_gravity="start"
            android:onClick="onClickCancel"
            android:background="#f5a7ab"/>


        <Button
            android:id="@+id/MM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:background="#a6df9d"
            android:fontFamily="casual"
            android:text="Main Menu"
            android:onClick="onClickMM"
            android:textColor="#216303"
            android:textSize="20sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7b7575"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/editSubject"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Subject name"
        android:textColor="#2685d9"
        android:textSize="20sp"
        android:fontFamily="casual"
        />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="15dp"
        android:background="#ce91e4"
        android:fontFamily="casual"
        android:text="SAVE"
        android:onClick="onClicksave"
        android:textColor="#bb00ff"
        android:textSize="20dp" />


</LinearLayout>
